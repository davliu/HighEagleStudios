<div class='post'>
  <div class='post-title'>
    <h3><%= post.title %></h3>
    <small class='timestamp'><%= post.created_at.localtime.strftime("%A, %B %d, %Y %I:%M %p") %></small>
  </div>
  <div class='post-body'>
    <%= post.body %>
  </div>
  <div class='post-footer timestamp'>
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </div>
  <% if signed_in? && current_user?(post.user) %>
    <div class='post-edit'>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this posting?" }, title: post.title %>
    </div>
  <% end %>
</div>
