<h1>Blog Users</h1>

<%= will_paginate %>

<table class='table'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.name} (#{user.posts.count})", user %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Update', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
